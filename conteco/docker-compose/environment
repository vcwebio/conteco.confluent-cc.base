#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="confluent_cc.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_confluent_cc"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_confluent_cc"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST=""
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_CONFLUENT_CC_ENVIRONMENT,$CONTECO_DC_CONFLUENT_CC_COMMAND,$CONTECO_DC_CONFLUENT_CC_VOLUMES,$CONTECO_DC_CONFLUENT_CC_NETWORKS,$CONTECO_DC_CONFLUENT_CC_DEPLOY_LABELS,$CONTECO_DC_CONFLUENT_CC_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="controlcenter"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_CONFLUENT_CC_ENVIRONMENT="\
'CONTROL_CENTER_BOOTSTRAP_SERVERS=kafka:9092',\
'CONTROL_CENTER_ZOOKEEPER_CONNECT=zookeeper:2181',\
'CONTROL_CENTER_CONNECT_CLUSTER=${DOLLAR}{CONTECO_DC_CONFLUENT_CC_KAFKA_CONNECT}',\
'CONTROL_CENTER_KSQL_URL=${DOLLAR}{CONTECO_DC_CONFLUENT_CC_KSQL_SERVER_URL}',\
'CONTROL_CENTER_KSQL_ADVERTISED_URL=${DOLLAR}{CONTECO_DC_CONFLUENT_CC_KSQL_SERVER_URL}',\
'CONTROL_CENTER_SCHEMA_REGISTRY_URL=http://schema_registry:8081',\
'CONTROL_CENTER_REPLICATION_FACTOR=1',\
'CONTROL_CENTER_INTERNAL_TOPICS_PARTITIONS=1',\
'CONTROL_CENTER_MONITORING_INTERCEPTOR_TOPIC_PARTITIONS=1',\
'CONFLUENT_METRICS_TOPIC_REPLICATION=1'${DOLLAR}{CONTECO_DC_CONFLUENT_CC_LISTENERS}"
export CONTECO_DC_CONFLUENT_CC_COMMAND=
export CONTECO_DC_CONFLUENT_CC_VOLUMES=
export CONTECO_DC_CONFLUENT_CC_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_CONFLUENT_CC_DEPLOY_LABELS=
export CONTECO_DC_CONFLUENT_CC_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES=
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS confluent_cc.base
export CONTECO_DC_CONFLUENT_CC_KSQL_SERVER_URL="http://${CONTECO_HOSTNAME}:8088"
export CONTECO_DC_CONFLUENT_CC_KAFKA_CONNECT="${CONTECO_HOSTNAME}:8083"
export CONTECO_DC_CONFLUENT_CC_PORTS="9021:9021"
export CONTECO_DC_CONFLUENT_CC_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_CONFLUENT_CC_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_CONFLUENT_CC_DEPLOY_RESOURCES_LIMITS_MEMORY="1536m"
export CONTECO_DC_CONFLUENT_CC_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="1024m"
# END SETTINGS confluent_cc.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
